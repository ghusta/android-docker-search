<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/listitem_tag_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/layout_size_and_timestamp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="1.0-alpha-alpha-alpha.beta-beta-beta-beta-beta-beta-beta"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/textColorPrimary"
        tools:ignore="HardcodedText"/>

    <LinearLayout
        android:id="@+id/layout_size_and_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listitem_tag_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="213 MB"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/listitem_tag_last_updated"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="date time relative"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

</RelativeLayout>