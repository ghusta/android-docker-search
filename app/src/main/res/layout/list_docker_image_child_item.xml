<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/md_theme_primaryContainer"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="horizontal">

    <!-- See : https://m2.material.io/components/buttons/android#text-button -->
    <ImageButton
        android:id="@+id/btn_image_tags"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_outline_sell_24"
        app:tint="?attr/colorOnPrimary"
        android:tooltipText="@string/tooltip_tags"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/btn_image_hub_page"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_open_in_browser_24"
        app:tint="?attr/colorOnPrimary"
        android:tooltipText="@string/tooltip_open_dockerhub_page"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/btn_image_share"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_outline_share_24"
        app:tint="?attr/colorOnPrimary"
        android:tooltipText="@string/tooltip_share"
        tools:ignore="HardcodedText" />

</LinearLayout>